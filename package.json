{
  "name": "recipe-sharing-platform",
  "version": "1.0.0",
  "description": "A modern recipe sharing platform with intelligent recommendations",
  "main": "server/index.js",
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "test-compile": "node test-compilation.js",
    "check": "cd client && npm run build --dry-run"
  },
  "keywords": [
    "recipe",
    "sharing",
    "react",
    "mongodb",
    "nodejs"
  ],
  "author": "Recipe Platform Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "axios": "^1.13.4"
  }
}
